      "type": "date"
    },
    "completed_at": {
      "type": "datetime"
    },
    "approved_at": {
      "type": "datetime"
    },
    "tenant": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::tenant.tenant",
      "inversedBy": "projects"
    },
    "company": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::company.company",
      "inversedBy": "projects"
    },
    "subcontractor": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::company.company"
    },
    "assigned_to": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "approved_by": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "documents": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::document.document",
      "mappedBy": "project"
    },
    "photos": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "audit_log": {
      "type": "json"
    }
  }
